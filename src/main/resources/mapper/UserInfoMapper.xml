<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.web.movie.mapper.UserInfoMapper">

    <select id="getUserInfoById" resultType="com.web.movie.entity.UserInfo">
        SELECT *
        FROM user_info
        WHERE id = #{id}
    </select>

    <insert id="insertUserInfo" parameterType="com.web.movie.entity.UserInfo">
        INSERT INTO user_info(id, name, email, qq, age)
        VALUES (#{id}, #{name}, #{email}, #{qq}, #{age})
    </insert>

    <update id="updateUserInfo" parameterType="com.web.movie.entity.UserInfo">
        UPDATE user_info
        SET name  = #{name},
            email = #{email},
            qq    = #{qq},
            age   = #{age}
        WHERE id = #{id}
    </update>

</mapper>