<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.web.movie.mapper.UserMapper">

    <select id="getInfo" resultType="com.web.movie.entity.User">
        SELECT *
        FROM user
        WHERE id = #{id}
          AND password = #{password}
    </select>

    <select id="getUser" resultType="com.web.movie.entity.User">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <insert id="insertUser" parameterType="com.web.movie.entity.User">
        INSERT INTO user(id, password)
        VALUES (#{id}, #{password})
    </insert>

</mapper>