<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.web.movie.mapper.UserMovieRatingMapper">

    <select id="getCommentIdByMovie" resultType="com.web.movie.entity.UserMovieRating">
        SELECT * FROM user_movie_rating where movie_id=#{id}
    </select>

    <select id="getCommentIdByUser" resultType="com.web.movie.entity.UserMovieRating">
        SELECT * FROM user_movie_rating where user_id=#{id}
    </select>

    <insert id="insertUserMovieRating" parameterType="com.web.movie.entity.Rating">
        INSERT INTO user_movie_rating(comment_id,movie_id,user_id)
        VALUES(#{comment_id}, #{movie_id}, #{user_id})
    </insert>

    <delete id="deleteUserMovieRatingByCommentId">
        DELETE FROM user_movie_rating WHERE comment_id=#{comment_id}
    </delete>

    <select id="getUserMovieRatingByUserId" parameterType="int" resultType="com.web.movie.entity.UserMovieRating">
        SELECT * FROM user_movie_rating where user_id=#{user_id};
    </select>

</mapper>